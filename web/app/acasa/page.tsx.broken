'use client'

import { useState, useEffect, useRef } from 'react'
import Link from 'next/link'
import { useRouter } from 'next/navigation'
import { motion, useScroll, useTransform } from 'framer-motion'

export default function AcasaPage() {
  const router = useRouter()
  const [scrolled, setScrolled] = useState(false)
  const [mounted, setMounted] = useState(false)
  const [currentStep, setCurrentStep] = useState(1)
  const [countersAnimated, setCountersAnimated] = useState(false)
  const [sectionProgress, setSectionProgress] = useState(0)
  const forWhomRef = useRef<HTMLDivElement>(null)
  
  const { scrollYProgress } = useScroll({
    target: forWhomRef,
    offset: ["end 100%", "end 50%"]
  })
  
  const shrinkValue = useTransform(scrollYProgress, [0, 1], [0, 12])
  const radiusValue = useTransform(scrollYProgress, [0, 1], [0, 48])
  
  const totalSteps = 3
  const stepDuration = 10000
  const stepperRef = useRef<HTMLDivElement>(null)
  const stepRef = useRef(0)
  const intervalRef = useRef<NodeJS.Timeout | null>(null)

  useEffect(() => {
    setMounted(true)
    
    const handleScroll = () => {
      setScrolled(window.scrollY > 50)
    }
    window.addEventListener('scroll', handleScroll)
    return () => window.removeEventListener('scroll', handleScroll)
  }, [])

  const goToStep = (stepIndex: number) => {
    for (let i = 1; i <= totalSteps; i++) {
      const stepEl = document.getElementById(`step-${i}`)
      const visualEl = document.getElementById(`visual-${i}`)
      if (stepEl) stepEl.classList.remove('active')
      if (visualEl) visualEl.classList.remove('active')
    }
    setTimeout(() => {
      const stepEl = document.getElementById(`step-${stepIndex}`)
      const visualEl = document.getElementById(`visual-${stepIndex}`)
      if (stepEl) stepEl.classList.add('active')
      if (visualEl) visualEl.classList.add('active')
    }, 50)
    stepRef.current = stepIndex
    setCurrentStep(stepIndex)
    
    if (intervalRef.current) clearInterval(intervalRef.current)
    intervalRef.current = setInterval(() => {
      const next = stepRef.current < totalSteps ? stepRef.current + 1 : 1
      
      for (let i = 1; i <= totalSteps; i++) {
        const stepEl = document.getElementById(`step-${i}`)
        const visualEl = document.getElementById(`visual-${i}`)
        if (stepEl) stepEl.classList.remove('active')
        if (visualEl) visualEl.classList.remove('active')
      }
      setTimeout(() => {
        const stepEl = document.getElementById(`step-${next}`)
        const visualEl = document.getElementById(`visual-${next}`)
        if (stepEl) stepEl.classList.add('active')
        if (visualEl) visualEl.classList.add('active')
      }, 50)
      stepRef.current = next
      setCurrentStep(next)
    }, stepDuration)
  }

  useEffect(() => {
    if (!mounted || !stepperRef.current) return

    const activateStep = (stepIndex: number) => {
      for (let i = 1; i <= totalSteps; i++) {
        const stepEl = document.getElementById(`step-${i}`)
        const visualEl = document.getElementById(`visual-${i}`)
        if (stepEl) stepEl.classList.remove('active')
        if (visualEl) visualEl.classList.remove('active')
      }
      
      setTimeout(() => {
        const stepEl = document.getElementById(`step-${stepIndex}`)
        const visualEl = document.getElementById(`visual-${stepIndex}`)
        if (stepEl) stepEl.classList.add('active')
        if (visualEl) visualEl.classList.add('active')
      }, 50)
      
      stepRef.current = stepIndex
      setCurrentStep(stepIndex)
    }

    const startStepper = () => {
      const nextStep = stepRef.current < totalSteps ? stepRef.current + 1 : 1
      activateStep(nextStep)
      
      if (intervalRef.current) clearInterval(intervalRef.current)
      intervalRef.current = setInterval(() => {
        const next = stepRef.current < totalSteps ? stepRef.current + 1 : 1
        activateStep(next)
      }, stepDuration)
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active')
          startStepper()
        }
      })
    }, { threshold: 0.3 })

    observer.observe(stepperRef.current)

    return () => {
      if (intervalRef.current) clearInterval(intervalRef.current)
      observer.disconnect()
    }
  }, [mounted])

  useEffect(() => {
    if (!mounted) return

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active')
        }
      })
    }, { threshold: 0.15 })

    document.querySelectorAll('.reveal').forEach(el => observer.observe(el))

    return () => observer.disconnect()
  }, [mounted])

  useEffect(() => {
    if (!mounted) return

    const statsSection = document.getElementById('stats-section')
    if (!statsSection) return

    const observer = new IntersectionObserver((entries) => {
      if (entries[0].isIntersecting && !countersAnimated) {
        setCountersAnimated(true)
        const counters = document.querySelectorAll('.counter')
        counters.forEach((counter) => {
          const target = +(counter.getAttribute('data-target') || '0')
          const duration = 1800
          const startTime = performance.now()

          function update(currentTime: number) {
            const elapsed = currentTime - startTime
            const progress = Math.min(elapsed / duration, 1)
            const easeProgress = 1 - Math.pow(1 - progress, 4)
            const current = Math.floor(easeProgress * target)

            counter.textContent = current.toLocaleString('ro-RO')

            if (progress < 1) {
              requestAnimationFrame(update)
            } else {
              counter.textContent = target.toLocaleString('ro-RO')
              
              const plant = counter.closest('.group')?.querySelector('.plant-grow')
              if (plant) {
                plant.classList.remove('scale-0')
                plant.classList.add('scale-100')
              }
            }
          }
          requestAnimationFrame(update)
        })
      }
    }, { threshold: 0.3 })

    observer.observe(statsSection)

    return () => observer.disconnect()
  }, [mounted, countersAnimated])

  useEffect(() => {
    if (!mounted) return

    const cards = document.querySelectorAll('.card-animat')
    if (cards.length === 0) return

    const cardObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('vizibil')
          cardObserver.unobserve(entry.target)
        }
      })
    }, { threshold: 0.2 })

    cards.forEach(card => cardObserver.observe(card))

    return () => cardObserver.disconnect()
  }, [mounted])

  useEffect(() => {
    if (!mounted) return

    const forWhomSection = document.getElementById('for-whom-section')
    if (!forWhomSection) return

    const updateProgress = () => {
      const rect = forWhomSection.getBoundingClientRect()
      const windowHeight = window.innerHeight
      const sectionHeight = rect.height
      
      const visibleTop = Math.max(0, rect.top)
      const visibleBottom = Math.min(windowHeight, rect.bottom)
      const visibleHeight = Math.max(0, visibleBottom - visibleTop)
      
      const progress = visibleHeight / sectionHeight
      setSectionProgress(progress)
    }

    window.addEventListener('scroll', updateProgress, { passive: true })
    updateProgress()

    return () => window.removeEventListener('scroll', updateProgress)
  }, [mounted])

  if (!mounted) return null

  return (
    <div className="font-inter">
