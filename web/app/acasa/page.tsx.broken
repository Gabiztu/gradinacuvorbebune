              <span>Gradina cu</span>
              <span className="-mt-[2px]">Vorbe Bune</span>
            </span>
          </div>
          <div className="flex items-center gap-6">
            <Link href="/login" className="hidden md:block text-sm font-medium text-stone-500 hover:text-stone-900 transition-colors font-sans">
              Login
            </Link>
            <Link 
              href="/login?mode=signup" 
              className="bg-stone-900 text-white px-6 py-2.5 rounded-full text-sm font-medium hover:bg-stone-800 hover:scale-105 transition-all shadow-lg shadow-stone-900/20 font-sans"
            >
              Începe Acum
            </Link>
          </div>
        </div>
      </nav>

      {/* ================= 1. HERO SECTION ================= */}
      <section className="relative min-h-screen flex items-center pt-32 pb-12 px-6 overflow-hidden">
        <div className="absolute inset-0 z-0 pointer-events-none overflow-hidden opacity-60">
          <div className="blob-1 absolute top-[-10%] left-[-10%] w-[50vw] h-[50vw] bg-emerald-200/40 rounded-full blur-[100px]" />
          <div className="blob-2 absolute bottom-[-10%] right-[-10%] w-[40vw] h-[60vw] bg-amber-200/30 rounded-full blur-[100px]" />
        </div>

        {/* Background texture with fade */}
        <div className="absolute inset-0 z-[1] overflow-hidden pointer-events-none">
